.main-nav {
  display: flex
  transition: all .6s linear
  @media (max-width: 960px) {
    position: absolute
    z-index: 1
    bottom: 0
    left: 0
    opacity: 0
    transform: translate3d(0,-100%,0)
    width: 100%
    background: rgb(51, 141, 227)
  }
  &--isOpen{
    display: flex
    opacity: 1
    transform: translate3d(0,94px,0)
  }
  &__link {
    display: block
    padding: 35px 25px
    color: #fff
    position: relative
    flex-grow: 1
    text-align: center
    &:before {
      display: block
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 2px
      background: #6bc2f1
    }
    &:hover {
      color: #6bc2f1
    }
    &--active {
      color: #6bc2f1
      &:before {
        content: ''
      }
    }
  }
}
