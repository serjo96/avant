.main-nav {
  display: flex
  @media (max-width: 960px) {
    display: none
  }
  &__link {
    display: block
    padding: 35px 25px
    color: #fff
    position: relative
    flex-grow: 1
    &:before {
      display: block
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 2px
      background: #6bc2f1
    }
    &:hover {
      color: #6bc2f1
    }
    &--active {
      color: #6bc2f1
      &:before {
        content: ''
      }
    }
  }
}
