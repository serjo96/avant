
.profile-info {
  display: flex
  padding-bottom: 25px
  flex-wrap: wrap
  margin-top: 30px
  &__data {
    padding-right: 10px
    width: 50%
    @media (max-width: 550px) {
      width: 100%
    }
  }
}

.profile-avatar {
  position: relative
  width: 50%
  display: flex
  justify-content: center
  text-transform: uppercase
  font-size: 22px
  @media (max-width: 550px) {
    order: -1
    width: 100%
    justify-content: flex-start
    margin-top: 10px
  }
  &__image {
    border: 10px solid
    &:hover {
      .profile-avatar__change-btn {
        display: flex
      }
    }
  }
  &__change-btn {
    position: absolute
    width: 100%
    height: 100%
    text-align: center
    background: rgba(0, 0, 0, 0.42)
    color: #fff
    flex-direction: column
    align-items: center
    justify-content: center
    text-transform: uppercase
    padding: 0 20px
    cursor: pointer
    display: none
  }
}

.form-group {
  &__label {
    color: #939ba5
    text-transform: uppercase
    font-weight: bold
  }
  &__field {
    height: 44px
  }
  &__text {
    display: flex
    align-items: center
    width: 100%
    cursor: pointer
    padding: 7px 0 2px
    i {
      display: none
    }
    &:hover {
      i {
        display: block
      }
    }
    span {
      padding-right: 3px
      display: inline-block
    }
  }
}
