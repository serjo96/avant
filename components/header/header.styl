.header {
  border-bottom: 5px solid #c8c1c1;
  &__container {
    display: flex
    justify-content: space-between
    align-items: center
    padding-top: 25px;
    padding-bottom: 15px;
    @media (max-width: 960px) {
      padding-left: 10px
      padding-right: 10px
    }
  }

  &__logo {
    width: 170px
    display: block
  }

  &__link{
    text-transform: uppercase
  }
}


.nav {
  display: flex
  &__item {
    margin-right: 5px
  }
}
