.header {
  position: sticky
  top: 0
  background: #fff
  z-index: 5
  box-shadow: 0 0 3px 3px rgba(0,0,0,0.3)
  &__container {
    display: flex
    justify-content: space-between
    align-items: center
    padding-top: 25px;
    padding-bottom: 15px;
    @media (max-width: 960px) {
      padding-left: 10px
      padding-right: 10px
    }
  }

  &__logo {
    width: 170px
    display: block
  }

  &__link{
    text-transform: uppercase
  }
}


.nav {
  display: flex
  align-items: center
  &__item {
    margin-right: 5px
  }
}
