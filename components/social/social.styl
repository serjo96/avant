.social-area {
  background: rgba(7, 33, 53, 0.98);
  color: #fff;
  @media (max-width: 980px) {
    padding: 0 10px
  }
  &__link {
    padding: 0 10px
  }
  &__nav {
    padding: 0 15px;
    display: flex
    align-items: center
    @media (max-width: 350px) {
      flex-wrap: wrap
      padding: 0
      margin-top: 10px
      margin-left: -10px
    }
    i{
      font-size: 14px
    }
  }
  h4 {
    display: block;
    text-transform: capitalize;
    font-size: 1.5rem;
    @media (max-width: 350px) {
      flex: 1;
    }
  }
}

.subs-form-area {
  display: flex
  align-items: baseline
  padding: 10px 0
  @media (min-width: 980px) {
    justify-content: flex-end
  }
  @media (max-width: 350px) {
    flex-wrap: wrap
  }
  &__title {
    margin-right: 10px
    @media (max-width: 350px) {
      margin-bottom: 10px
    }
  }
  &__form {
    display: flex
    align-items: baseline
  }
}

.social-follow {
  display: flex
  align-items: center
  padding: 10px 0
  @media (max-width: 350px) {
    flex-wrap: wrap
  }
}

.brdr {
  @media (min-width: 980px) {
    border-right: 2px solid #072135;
  }
}
