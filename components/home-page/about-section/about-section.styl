.about-area {
  padding-top: 50px
}
.about-content {
   @media (max-width: 960px) {
     padding: 0 20px
     padding-bottom: 10px
   }
  &__title {
    text-transform: uppercase;
    color: #6BC2F1;
    font-size: 25px;
  }
  &__subtitle {
    font-size: 35px;
    text-transform: capitalize;
    margin: 30px 0;
  }

  &__text {
    margin-bottom: 65px;
    @media (max-width: 960px) {
      margin-bottom: 20px
    }
  }
}

.about-image {
  @media (max-width: 960px) {
    display: none
  }
}
