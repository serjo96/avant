.section-base {
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.5)
  padding-top: 90px;
  padding-bottom: 90px;
}

.description-section {
  background: linear-gradient(to right, rgba(73,155,234,1) 0%, rgba(23,116,214,1) 100%)
  color: #fff
  &__content {
    display: flex
    justify-content: space-between
    flex-wrap: wrap
    @media (max-width: 930px) {
      justify-content: center
      padding: 0 15px
    }
  }
}
