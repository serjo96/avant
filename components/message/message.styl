.message {
  &__title {
    text-transform: uppercase
    font-size: 15px
    font-weight: bold
  }



  &__content {
    &:not(:last-child) {
      margin-bottom: 10px
    }
    h3 {
      margin-bottom: 4px
      font-size: 17px
      font-weight: bold
      color: #0c2639
    }
  }

  &__link {
    border-bottom: 1px dotted
    &:hover {
      border-color: transparent
    }
  }

  &__margin {
    display: flex
  }

  &--group {
    .message-info {
      &__avatar-wrapper {
        display: none
      }
      &__time {
        display: none
      }
    }
    .message-body {
      &:before {
        visibility: hidden
      }
    }
  }
}

.message-body {
  position: relative
  min-width: 42px;
  max-width: 82%;
  box-sizing: content-box;
  min-height: 1.35em;
  display: inline-block;
  padding: 16px 24px;
  border-radius: 3px;
  box-shadow: none;
  &__header {
    display: flex
    justify-content: space-between
    align-items: flex-start;
    margin-bottom: 10px
  }
  &__container {
    flex: 1;
    position: relative;
    opacity: 1;
  }
}


.message-info {
  min-width: 40px;
  width: 40px;
  margin-left: 0;
  margin-right: 20px;
  position: relative;
  display: flex;
  flex-direction: column;
  &__avatar-wrapper {
    position: absolute
    bottom: 7px
    width: 40px
    min-height: 40px
    height: 40px
    z-index: 0
    transition: background-color .75s
  }
  &__avatar {
    transform: scale(1);
    background-repeat: no-repeat;
    width: 100%
    height: 100%
    background-size: contain;
    background-position: 50%;
  }
  &__time {
    font-size: 10px
    text-align: center
    transition: color .75s
    width: 100%
    position: absolute
    height: 1em
    bottom: -7px
  }
}

.message-outgoing {
  .message-body {
    transition: opacity .5s,background-color .75s,color .75s
    box-shadow: 0 1px 28px 0 rgba(90,60,122,.22)
    max-width: 82%
    &:before {
      opacity: 0
      transition: all .35s;
      content: "";
      width: 11px;
      height: 10px;
      display: inline-block;
      position: absolute;
      left: -9px;
      bottom: 12px;
      background-size: 40px;
      background-repeat: no-repeat;
      background-position: 50%;
      mask-image: url('~assets/corner.svg');
      background-color: rgb(255, 255, 255);
      z-index: 1;
    }
  }

  .message-info {
    justify-container: flex-end
    &__avatar-wrapper {
      visibility: hidden
    }

    &.visible {
      .message-info__avatar-wrapper {
        visibility: visible;
      }
      + .message-body {
        &:before {
          opacity: 1;
        }
      }
    }
  }
}



.message-incoming {
  .message__margin {
    flex-direction: row-reverse
  }

  .message-body {
    background: #40c4ff
    color: #fff
  }

  .message-info {
    width: 0
    min-width: 0
    &__time {
      top: 15px;
      left: 12px;
      color: #40c4ff
    }
  }

  .message-body__container {
    display: flex
    justify-container: flex-end
  }
}

.message-incoming:not(:first-child) .message__margin,
.message-outgoing:not(:first-child) .message__margin {
  margin-top: 15px;
}

.message-incoming + .message-incoming .message__margin,
.message-outgoing + .message-outgoing .message__margin {
  margin-top: 2px;
}


.collapse {
  position: relative
  overflow: hidden;
  &__content {
    max-height: 70px;
    transition: all .35s;
    overflow: hidden
    background: white;
    position: relative
  }
  &__shadow {
    position: absolute
    width: 100%
    height: 20px
    left: 0
    bottom: 0
    background: rgba(255, 255, 255, 0.74)
    box-shadow: 0 -9px 7px -5px  rgba(255, 255, 255, 0.74) inset;
  }
  &--is-open {
    .collapse__content {
      max-height: 100%;
      padding: 1em;
      .collapse__shadow {
        display: none
      }
    }
  }
}

.illness-degree {
  width: 100px;
  &__line {
    width: 100%;
    height: 2px;
    margin-bottom: 3px
    background: #000
  }
  &__text {
    font-weight: 300;
    font-size: 14px
  }
}
