.profile {
  padding-bottom: 0
  display: flex
  flex-direction: column
  justify-content: space-between
  &__tab-section {
    padding: 0 40px
    padding-top: 25px
    &:not(:first-child) {
      border-top: 1px solid #dedede
    }
  }
  &__tab-title {
    font-weight: bold
    text-transform: uppercase
    text-align: center
  }
  &__footer {
    border-top: 1px solid #dedede
    background: #fafafa
    padding: 15px 40px
    justify-content: flex-end
  }
}
