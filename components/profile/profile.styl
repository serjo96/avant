.profile-settings {
  padding-top: 25px
  padding-bottom: 0
  &__title {
    font-weight: bold
    text-transform: uppercase
  }
  &__section {
    padding: 0 40px
    &:not(:first-child) {
      border-top: 1px solid #dedede
    }
  }
  &__footer {
    border-top: 1px solid #dedede
    background: #fafafa
    padding: 15px 40px
    justify-content: flex-end
  }
}

.profile-info {
  display: flex
  align-items: center
  padding-bottom: 25px
  &__data {
    margin-top: 30px
    padding-right: 10px
    width: 50%
  }
}

.profile-avatar {
  position: relative
  width: 50%
  display: flex
  justify-content: center
  &__image {
    border: 10px solid
    &:hover {
      .profile-avatar__change-btn {
        display: flex
      }
    }
  }
  &__change-btn {
    position: absolute
    width: 100%
    height: 100%
    text-align: center
    background: rgba(0, 0, 0, 0.42)
    color: #fff
    flex-direction: column
    align-items: center
    justify-content: center
    text-transform: uppercase
    padding: 0 20px
    cursor: pointer
    display: none
  }
}

.form-group {
  &__label {
    color: #939ba5
    text-transform: uppercase
    font-weight: bold
  }
  &__field {
    height: 44px
  }
  &__text {
    display: flex
    align-items: center
    width: 100%
    cursor: pointer
    padding: 7px 0 2px
    i {
      display: none
    }
    &:hover {
      i {
       display: block
      }
    }
    span {
      padding-right: 3px
      display: inline-block
    }
  }
}
