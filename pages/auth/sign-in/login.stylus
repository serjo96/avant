.login {
  &__title{
    font-weight: 200
    font-size: 2.5rem;
    letter-spacing: 0.05rem;
    margin-bottom: 10px
  }
  &__reset-password-button{
    margin: 5px 0
    display: block
    &:hover{
      text-decoration: underline
    }
  }
}


.response-message {
  margin-top: 20px
  &__text {
    padding: 0 5px
    border-radius: 3px
  }
  &__resend-confirm {
    text-decoration: underline
    color: #fff
    &:hover {
      text-decoration: none
    }
  }
}
