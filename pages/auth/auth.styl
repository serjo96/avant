.auth {
  background: linear-gradient(135deg, rgba(36, 46, 77, 0.9), rgba(137, 126, 121, 0.9));
  font-family: roboto;
  height: 100%
  display: flex
  justify-content: center;
  align-items: center
  color: #fff
  &__form {
    width: 360px
    background: rgba(0, 0, 0, 0.15);
    padding: 20px
    position: relative
    &:before{
      content: '';
      position: absolute;
      top: -2px;
      left: 0;
      height: 2px;
      width: 100%;
      background: linear-gradient(to right, #00b0ff, #008bd6);
    }
    &--sign-up{
      &:before{
        background: linear-gradient(to right, #00f465, #4caf50);
      }
    }
  }
}
.fade-enter-active, .fade-leave-active {
  animation: bounce-in .7s;
}
.fade-enter, .fade-leave-to {
  animation: bounce-in .7s reverse;
}

@keyframes bounce-in {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.5);
    opacity: .5;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}
